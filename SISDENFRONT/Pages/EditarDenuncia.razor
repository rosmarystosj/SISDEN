@code {
    [Parameter]
    public int Id { get; set; }
    private DenunciasDTO denunciaDTO = new DenunciasDTO();
    private List<Motivocierre> motivosCierre;
    private List<Estado> estado;
    private string errorMessage;

    private void OnPrisionChanged(ChangeEventArgs e)
    {
        denunciaDTO.Denprision = (bool)e.Value;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        denunciaDTO = new DenunciasDTO();

        motivosCierre = new List<Motivocierre>();
        estado = new List<Estado>();

        motivosCierre = await Http.GetFromJsonAsync<List<Motivocierre>>("api/ObtenerMotivoCierre");
        estado = await Http.GetFromJsonAsync<List<Estado>>("api/Estado");

    }
    private async Task HandleValidSubmit()
    {
        var response = await Http.PutAsJsonAsync($"api/EditarDenuncia/{Id}", denunciaDTO);
        if (response.IsSuccessStatusCode)
        {
            NavigationManager.NavigateTo("/login-denunciante");
        }
        else
        {
            errorMessage = "Ocurrió un error inesperado.";
        }
    }
}