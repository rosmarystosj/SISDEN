@page "/evidencia/{id:int}"
@layout NavLay
@inject LoginModelService LoginModel
@inject RegistroEntidadService RegistroServiceEntidad
@inject RegistroDenuncianteService RegistroService
@inject DenunciasService DenunciasService
@inject EntidadService EntidadService
@inject HttpClient Http


<body>
    <div class="loader-wrapper">
        <div class="loader">
            <div class="loader4"></div>
        </div>
    </div>
    <div class="tap-top"><i data-feather="chevrons-up"></i></div>
    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <div class="page-body-wrapper">
            <div class="page-body">
                <div class="container-fluid">
                    <div class="page-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h3>Evidencias del caso</h3>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a href="/index">
                                            <svg class="stroke-icon">
                                                <use href="../assets/svg/icon-sprite.svg#stroke-home"></use>
                                            </svg>
                                        </a>
                                    </li>
                                    <li href="/denuncias" class="breadcrumb-item">Ver Denuncias</li>
                                    <li href="" class="breadcrumb-item active"> Detalle Denuncia</li>
                                    <li class="breadcrumb-item active"> Ver Evidencia</li>

                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Imagenes <span></span></h4>
                                </div>
                                <div class="card-body">
                                    <div class="row my-gallery gallery" id="aniimated-thumbnials" itemscope="">
                                        @if (evidencias.Any(e => e.TipoEvidencia == "Fotos"))
                                       {
                                        @foreach (var evidencia in evidencias)
                                        {
                                        <figure class="col-md-3 col-6 img-hover hover-1" itemprop="associatedMedia" itemscope="">
                                          <a href="../assets/images/big-lightgallry/08.jpg" src="@evidencia.Evurl" itemprop="contentUrl" data-size="1600x950">
                                            <div><img src="@evidencia.Evurl" itemprop="thumbnail" alt="Image description"></div>
                                            </a>
                                            <figcaption itemprop="caption description">Image caption  1</figcaption>
                                        </figure>
                                                 
                                          }
                                        }
                                           
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Videos<span></span></h4>
                                </div>
                                <div class="card-body">
                                    <div class="row my-gallery gallery" id="aniimated-thumbnials" itemscope="">
                                    @if (evidencias.Any(e => e.TipoEvidencia == "Video"))
                                    {
                                        @foreach (var evidencia in evidencias)
                                        {
                                            <figure class="col-md-3 col-6 img-hover hover-1" itemprop="associatedMedia" itemscope="">
                                                <a href="../assets/images/big-lightgallry/08.jpg" src="@evidencia.Evurl" itemprop="contentUrl" data-size="1600x950">
                                                    <div><img src="@evidencia.Evurl" itemprop="thumbnail" alt="Image description"></div>
                                                </a>
                                                <figcaption itemprop="caption description">Image caption  1</figcaption>
                                            </figure>

                                        }
                                    }
             
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                  
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4>Documentos<span></span></h4>
                                </div>
                                <div class="card-body">
                                    <div class="row my-gallery gallery" id="aniimated-thumbnials" itemscope="">
                                    @if (evidencias.Any(e => e.TipoEvidencia == "Documento"))
                                    {
                                        @foreach (var evidencia in evidencias)
                                        {
                                            <figure class="col-md-3 col-6 img-hover hover-1" itemprop="associatedMedia" itemscope="">
                                                <a href="../assets/images/big-lightgallry/08.jpg" src="@evidencia.Evurl" itemprop="contentUrl" data-size="1600x950">
                                                    <div><img src="@evidencia.Evurl" itemprop="thumbnail" alt="Image description"></div>
                                                </a>
                                                <figcaption itemprop="caption description">Image caption  1</figcaption>
                                            </figure>

                                        }
                                    }
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 footer-copyright text-center">
                            <p class="mb-0">Copyright 2024 © Riho theme by pixelstrap  </p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

</body>
@code {
    [Parameter]
    public int Id { get; set; }

    private List<VistaEvidencia> evidencias;

    protected override async Task OnInitializedAsync()
    {
        evidencias = await Http.GetFromJsonAsync<List<VistaEvidencia>>($"api/ObtenerEvidencias/{Id}");
    }
}
